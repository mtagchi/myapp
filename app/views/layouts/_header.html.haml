%nav.navbar.navbar-expand-lg.header
  .navbar-header
    .header-left
      = link_to 'epulo', "/", class: 'navbar navbar-brand text-white'
    .header-right
      - if user_signed_in?
        = link_to 'イベントを開催する', new_event_path, class: 'btn btn-twitter rounded-pill'
        .btn-group
          %button.btn.btn-icon#dropdownMenuButton{ type: "button", "data-toggle" => "dropdown", "aria-haspopup" => "true", "aria-expanded" => "false" }= image_tag current_user.image.url, class: 'twitter-icon'
          .dropdown-menu.dropdown-menu-right{ "aria-labelledby" => "dropdownMenuButton" }
            = link_to current_user.name, "https://twitter.com/#{current_user.username}", class: 'dropdown-item', target: :_blank
            = link_to 'マイページ', "/users/#{current_user.id}", class: 'dropdown-item'
            = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "dropdown-item"
      - else
        = link_to 'Twitterで登録/ログイン', user_twitter_omniauth_authorize_path, class: 'btn btn-twitter rounded-pill', role: "button"
