%nav.navbar.header
  .navbar-header
    .navbar-left
      %a.navbar.navbar-brand.text-white{href: "/"}App名
    .navbar-right
      - if user_signed_in?
        %a.btn.btn-twitter.rounded-pill{role: "button", href: new_event_path}イベントを開催する
        .btn-group
          %button.btn.btn-icon#dropdownMenuButton{type: "button", "data-toggle" => "dropdown", "aria-haspopup" => "true", "aria-expanded" => "false"}= image_tag @user.image.url
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
            %a.dropdown-item{href: "https://twitter.com/#{@user.username}"}= @user.name
            %a.dropdown-item{href: "/"}マイページ
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item"
      - else
        %a.btn.btn-twitter.rounded-pill{role: "button", href: user_twitter_omniauth_authorize_path}Twitterで登録/ログイン
